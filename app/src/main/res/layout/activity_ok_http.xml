<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">
        <Button
            android:id="@+id/get_request"
            style="@style/ButtonStyle"
            android:text="get请求"/>
        <Button
            android:id="@+id/post_request"
            style="@style/ButtonStyle"
            android:text="post请求"/>
        <Button
            android:id="@+id/post_file"
            style="@style/ButtonStyle"
            android:text="upload file"/>
        <Button
            android:id="@+id/down_file"
            style="@style/ButtonStyle"
            android:text="Down File"/>
        <Button
            android:id="@+id/cancel_request"
            android:text="Cancel Request"
            style="@style/ButtonStyle"/>
        <Button
            android:id="@+id/use_engine_test"
            android:text="Use Engine"
            style="@style/ButtonStyle"/>
        <TextView
            android:id="@+id/engine_get_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>