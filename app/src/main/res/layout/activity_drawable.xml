<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    >
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="镂空效果"
        android:textSize="20sp"
        android:background="@drawable/selector1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拍照/选中效果"
        android:background="@drawable/selector_corners"
        android:textColor="#66aa66"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从相册选择/选中效果"
        android:background="@drawable/button3_bg"
        android:textColor="#66aa66"/>
    <Button
        android:id="@+id/button4"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试渐变效果"
        android:background="@drawable/shape_gradient_linear"
        android:padding="10dp"/>
    <ImageView
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/level_list"
        />
</LinearLayout>