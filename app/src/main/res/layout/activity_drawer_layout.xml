<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/drawer_layout_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
        <Button
            android:id="@+id/drawer_open_right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textAllCaps="false"/>
    </RelativeLayout>

    <fragment
        android:id="@+id/drawer_layout_left_fragment"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:name="com.example.fragment.DrawerMenuLeftFragment"
        android:layout_gravity="start">
    </fragment>
    <fragment
        android:id="@+id/drawer_layout_right_fragment"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:name="com.example.fragment.DrawerMenuRightFragment"
        android:layout_gravity="end"/>
</androidx.drawerlayout.widget.DrawerLayout>