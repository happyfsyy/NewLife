<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!--<Button-->
            <!--android:id="@+id/drawer_open_right_button"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Open"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:textAllCaps="false"/>-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/drawer_layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title=" ">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <Button
                    android:id="@+id/drawer_layout_toolbar_message"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/message_drawable"
                    android:text="消息"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    />
                <Button
                    android:id="@+id/drawer_layout_toolbar_phone"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="电话"
                    android:textSize="18sp"
                    android:background="@drawable/message_right_drawable"
                    android:textColor="#000000"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <ListView
            android:id="@+id/drawer_layout_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </LinearLayout>

    <!--<fragment-->
        <!--android:id="@+id/drawer_layout_left_fragment"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:name="com.example.fragment.DrawerMenuLeftFragment"-->
        <!--android:layout_gravity="start">-->
    <!--</fragment>-->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/drawer_layout_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_test_menu"
        app:headerLayout="@layout/nav_header"
        android:fitsSystemWindows="true"
        android:layout_gravity="start">
    </com.google.android.material.navigation.NavigationView>
    <fragment
        android:id="@+id/drawer_layout_right_fragment"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:name="com.example.fragment.DrawerMenuRightFragment"
        android:layout_gravity="end"/>
</androidx.drawerlayout.widget.DrawerLayout>