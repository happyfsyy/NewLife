<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/animator_test_start"
            style="@style/ButtonStyle"
            android:text="BiuBiuBiu"/>

        <TextView
            android:id="@+id/animator_test_alpha"
            style="@style/AnimatorTextItem"
            android:text="我要变透明了"
            />
        <TextView
            android:id="@+id/animator_test_rotate"
            android:text="我要旋转了"
            style="@style/AnimatorTextItem"/>

        <TextView
            android:id="@+id/animator_test_translate"
            style="@style/AnimatorTextItem"
            android:layout_marginStart="100dp"
            android:text="我要平移了" />
        <TextView
            android:id="@+id/animator_test_scale"
            style="@style/AnimatorTextItem"
            android:text="我要放大了"
            />
        <TextView
            android:id="@+id/animator_test_combination"
            android:text="组合动画"
            style="@style/AnimatorTextItem"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:id="@+id/animator_test_view_property"
            android:text="使用ViewProperty的Text"
            style="@style/AnimatorTextItem"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>

</ScrollView>